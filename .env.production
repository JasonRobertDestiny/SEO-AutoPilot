# Production Environment Variables for Render Deployment
# Copy these environment variables to your Render service dashboard

# ====== CORE APPLICATION SETTINGS ======
FLASK_ENV=production
PYTHONPATH=/opt/render/project/src

# ====== AI PROVIDER KEYS (Required for AI analysis) ======
# Add these in Render dashboard as environment variables (keep secret)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# ====== OPTIONAL AI CONFIGURATION ======
SILICONFLOW_MODEL=Qwen/Qwen2.5-VL-72B-Instruct
DEFAULT_AI_PROVIDER=siliconflow

# ====== CACHING CONFIGURATION ======
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ====== PERFORMANCE SETTINGS ======
MAX_CONCURRENT_REQUESTS=10
MAX_PAGES_PER_ANALYSIS=1000
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20

# ====== SECURITY SETTINGS ======
SECRET_KEY=your-secure-random-secret-key-here
API_RATE_LIMIT=100
CORS_ORIGINS=*

# ====== LOGGING SETTINGS ======
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# ====== OPTIONAL: GOOGLE INTEGRATIONS ======
# GOOGLE_API_KEY=your_google_api_key_here
# SERPAPI_API_KEY=your_serpapi_key_here

# ====== OPTIONAL: DATABASE (if using persistent storage) ======
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# REDIS_URL=redis://host:port/0